{% extends 'ClasticNodeBundle:Backoffice/Node:list.html.twig' %}

{% block list_header %}
    <tr>
        <th></th>
        <th>Alias</th>
        <th>Author</th>
        <th>Created</th>
        <th>Status</th>
    </tr>
{% endblock %}

{% block list_body %}
    <tr>
        <td>
            <a class="btn btn-success btn-xs" href="{{ path('clastic_node_form', {type: type, id: record.id}) }}"><i class="fa fa-pencil"></i></a>
        </td>
        <td>{{ record.alias }}</td>
        <td>{{ record.node.user.username }}</td>
        <td>{{ record.node.created|date }}</td>
        <td>
            <span class="label label-default">online</span>
        </td>
    </tr>
{% endblock %}
