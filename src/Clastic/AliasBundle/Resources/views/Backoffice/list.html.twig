{% extends 'ClasticBackofficeBundle:Node:list.html.twig' %}

{% block list_header %}
    <tr>
        <th></th>
        <th>Alias</th>
        <th>Author</th>
        <th>Created</th>
        <th>Status</th>
    </tr>
{% endblock %}

{% block list_body %}
    <tr>
        <td>
            <a class="btn btn-success btn-xs" href="{{ path('clastic_backoffice_form', {type: type, nodeId: record.id}) }}"><i class="fa fa-pencil"></i></a>
            <a class="btn btn-danger btn-xs" href="{{ path('clastic_backoffice_node_delete', {type: type, nodeId: record.id}) }}"><i class="fa fa-trash"></i></a>
        </td>
        <td>{{ record.alias }}</td>
        <td>Dries</td>
        <td>{{ record.node.created|date }}</td>
        <td>
            <span class="label label-default">online</span>
        </td>
    </tr>
{% endblock %}