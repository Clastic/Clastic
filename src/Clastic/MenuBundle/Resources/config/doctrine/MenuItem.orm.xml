<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping">
  <entity repository-class="Clastic\MenuBundle\Entity\MenuItemRepository" name="Clastic\MenuBundle\Entity\MenuItem">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="title" type="string" column="title" length="255"/>
    <field name="left" column="lft" type="integer">
      <gedmo:tree-left/>
    </field>
    <field name="right" column="rgt" type="integer">
      <gedmo:tree-right/>
    </field>
    <field name="root" type="integer" nullable="true">
      <gedmo:tree-root/>
    </field>
    <field name="level" column="lvl" type="integer">
      <gedmo:tree-level/>
    </field>

    <one-to-many field="children" target-entity="MenuItem" mapped-by="parent">
      <order-by>
        <order-by-field name="left" direction="ASC" />
      </order-by>
    </one-to-many>

    <many-to-one field="parent" target-entity="MenuItem" inversed-by="children">
      <join-column name="parent_id" referenced-column-name="id" on-delete="CASCADE"/>
      <gedmo:tree-parent/>
    </many-to-one>

    <many-to-one field="menu" target-entity="Menu">
      <join-column name="menu_id" referenced-column-name="id" on-delete="CASCADE"/>
    </many-to-one>

    <gedmo:tree type="nested"/>
  </entity>
</doctrine-mapping>
